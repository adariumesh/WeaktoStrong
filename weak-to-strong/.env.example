# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Application Settings
APP_NAME="Weak-to-Strong Platform"
VERSION=1.0.0
API_V1_STR=/api/v1

# Security - MUST CHANGE IN PRODUCTION
SECRET_KEY=generate-secure-random-key-in-production
JWT_SECRET_KEY=generate-secure-jwt-key-in-production
JWT_ACCESS_EXPIRE_MINUTES=15
JWT_REFRESH_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/weaktostrong
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# CORS - Add your frontend URLs
BACKEND_CORS_ORIGINS=http://localhost:3000,https://localhost:3000,http://127.0.0.1:3000

# AI Services Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_HAIKU_MODEL=claude-3-haiku-20240307
CLAUDE_SONNET_MODEL=claude-3-5-sonnet-20241022

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:8b
OLLAMA_TIMEOUT=60

# AI Defaults
AI_DEFAULT_TIMEOUT=30
AI_MAX_TOKENS_PER_REQUEST=4000
AI_STREAM_CHUNK_SIZE=50

# Anti-blind-prompting Configuration
ENABLE_PROMPT_VALIDATION=true
MIN_PROMPT_LENGTH=20
REQUIRED_REASONING_PATTERNS="because,approach,think,strategy,want to,trying to"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Token Usage Limits by Tier
FREE_TIER_DAILY_TOKENS=10000
PRO_TIER_DAILY_TOKENS=100000
TEAM_TIER_DAILY_TOKENS=500000
ENTERPRISE_TIER_DAILY_TOKENS=-1

# Monitoring and Observability
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=false
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Docker/Sandbox Configuration
DOCKER_ENABLED=true
DOCKER_TIMEOUT=30
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=1

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=js,ts,jsx,tsx,py,html,css,json,md

# Production Only Variables (set these in production environment)
# DATABASE_URL=postgresql://user:password@production-host:5432/production-db
# REDIS_URL=redis://production-redis:6379/0
# SECRET_KEY=production-secret-key
# JWT_SECRET_KEY=production-jwt-key
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ANTHROPIC_API_KEY=sk-ant-your-real-api-key